---
type Props = {
  type: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
  className?: string
}

const { type, className } = Astro.props
const HeadingTag = type

const defaultStyles = 'font-heading'

const specificStyles = {
  h1: 'text-4xl md:font-semibold',
  h2: 'text-3xl',
  h3: 'text-2xl',
  h4: 'text-xl',
  h5: 'text-lg',
  h6: 'text-base'
}
---

<HeadingTag
  class={`${specificStyles[type]} ${defaultStyles} ${className || ''}`}
  ><slot /></HeadingTag
>
